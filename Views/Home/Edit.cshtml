<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>ScrumBoard-Update</title>
</head>
<body>
<div id="editbackground">

@using Microsoft.AspNetCore.Http
<br> 
<div class="row">
    <div class="col-sm-8">
        <h2 style="color:rgb(7, 155, 148); padding-left: 40px;  "> Prune Your Plant! </h2>

    </div>

    <div class="col-sm-4">
        <a href="logout"><button class="btn btn-info">Log out</button></a> 
        <a href="/board"><button class="btn btn-info"> Back to Scrum Board </button></a>
        <br>  
        <br>
        <!-- <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="search" placeholder="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form> -->
    </div>
</div>
<br> 
    
<h4 style="padding-left: 40px; color:#36b4da; "> Please fill out all the fields. </h4>
    <h5 style="padding-left: 50px; color:#36b4da; "> >> Note: The end date of the task must be in the future and after the start date.  </h5>
<br>

@model Scrum
@ViewBag.errors
<form asp-action="ProcessEdit" asp-controller="Home" method="post">
<ul>
    <div class="form-group">
        Title: 
        <input  class="form-control" type="title" asp-for="title" value='@ViewBag.about.title'>
        <span asp-validation-for="title"></span>  
    </div>  

    <div class="form-group">
         Department: 
        <select asp-for="dept" class="form-control">
            <option value="">  </option>
            <option value="Product Management"> Product Management </option>
            <option value="Engineering"> Engineering </option>
            <option value="UX"> UX </option>
            <option value="Marketing"> Marketing </option>
            <option value="Sales"> Sales </option>
            <option value="Implementation"> Implementation  </option>
            <option value="Research & Development"> Research & Development </option>
        </select>
    </div>

    <div class="form-group">
        Start Date:  <input  class="form-control" type="date" asp-for="startdate" value='@ViewBag.about.startdate.ToString("yyyy-MM-dd")'>
        <span asp-validation-for="startdate"></span>  
    </div>

    <div class="form-group">
        End Date:  <input  class="form-control" type="date" asp-for="enddate" value='@ViewBag.about.enddate.ToString("yyyy-MM-dd")'>
        <span asp-validation-for="enddate"></span>  
    </div>

    <div class="form-group">
        Status: 
        <select asp-for="status" class="form-control">
            <option value="">  </option>
            <option value="Back Log"> Back Log </option>
            <option value="To Do"> To Do </option>
            <option value="In Progress"> In Progress </option>
            <option value="Testing"> Testing </option>
            <option value="Done"> Done </option>
        </select>
    </div>

    <div class="form-group">
        Description:   <textarea  class="form-control" name="dx" rows="3"> @ViewBag.about.dx </textarea>  
        <!-- <span asp-validation-for="dx"></span> -->
    </div>
<button class="btn waves-effect waves-light" style="color:rgb(102, 113, 109); background: rgb(92, 220, 97);" type="submit" name="submit"> Post </button>
</ul>
<br>
<br>
</form>






</div> <!-- end of background image -->

</body>
</html>
